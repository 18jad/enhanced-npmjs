{
  "name": "Enhanced NpmJs",
  "description": "Some enhancements and extra features for npmjs.com",
  "version": "0.1.1",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "scripting",
    "clipboardWrite",
    "clipboardRead",
    "webRequest",
    "webNavigation",
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png",
    "512": "icons/icon-512x512.png"
  },
  "background": {
    "service_worker": "build/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.npmjs.com/package/*"],
      "js": [
        "build/constants.js",
        "build/utils/general.utils.js",
        "build/utils/html.utils.js",
        "build/utils/buttons.utils.js",
        "build/utils/codeblock.utils.js",
        "build/main.js"
      ],
      "css": ["build/styles/styles.css"],
      "match_about_blank": false
    }
  ]
}
